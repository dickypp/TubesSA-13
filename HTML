    <script>
        // Metode Brute Force
        function searchInsertPositionBruteForce(nums, target) {
            for (let i = 0; i < nums.length; i++) {
                if (nums[i] >= target) {
                    return i;
                }
            }
            return nums.length;
        }

        // Metode Binary Search dengan Memoization
        class InsertPositionFinder {
            constructor() {
                this.memo = {};
            }

            searchInsertPosition(nums, target) {
                const key = JSON.stringify({ nums, target });
                if (this.memo[key]) {
                    return this.memo[key];
                }

                const position = this.binarySearch(nums, target);
                this.memo[key] = position;
                return position;
            }

            binarySearch(nums, target) {
                let left = 0, right = nums.length - 1;
                while (left <= right) {
                    const mid = Math.floor((left + right) / 2);
                    if (nums[mid] === target) {
                        return mid;
                    } else if (nums[mid] < target) {
                        left = mid + 1;
                    } else {
                        right = mid - 1;
                    }
                }
                return left;
            }
        }

        function displayInsertPosition() {
            const nums = document.getElementById('arrayInput').value.split(',').map(Number);
            const target = parseInt(document.getElementById('targetInput').value);
            const method = document.querySelector('input[name="method"]:checked').value;
            let position;

            if (method === 'bruteForce') {
                position = searchInsertPositionBruteForce(nums, target);
            } else if (method === 'binarySearch') {
                const finder = new InsertPositionFinder();
                position = finder.searchInsertPosition(nums, target);
            }

            document.getElementById('result').innerText = `Insert position for target ${target} in array [${nums}] is: ${position}`;
        }

        function displayExampleResults() {
            const exampleArray = [1, 3, 5, 6, 8, 10];
            let results = '';

            const finder = new InsertPositionFinder();

            let target = 5;
            results += `Binary Search - Insert position for target ${target} in array [${exampleArray}] is: ${finder.searchInsertPosition(exampleArray, target)}<br>`;
            results += `Brute Force - Insert position for target ${target} in array [${exampleArray}] is: ${searchInsertPositionBruteForce(exampleArray, target)}<br>`;

            target = 2;
            results += `Binary Search - Insert position for target ${target} in array [${exampleArray}] is: ${finder.searchInsertPosition(exampleArray, target)}<br>`;
            results += `Brute Force - Insert position for target ${target} in array [${exampleArray}] is: ${searchInsertPositionBruteForce(exampleArray, target)}<br>`;

            target = 7;
            results += `Binary Search - Insert position for target ${target} in array [${exampleArray}] is: ${finder.searchInsertPosition(exampleArray, target)}<br>`;
            results += `Brute Force - Insert position for target ${target} in array [${exampleArray}] is: ${searchInsertPositionBruteForce(exampleArray, target)}<br>`;

            target = 10;
            results += `Binary Search - Insert position for target ${target} in array [${exampleArray}] is: ${finder.searchInsertPosition(exampleArray, target)}<br>`;
            results += `Brute Force - Insert position for target ${target} in array [${exampleArray}] is: ${searchInsertPositionBruteForce(exampleArray, target)}<br>`;

            document.getElementById('exampleResults').innerHTML = results;
        }

        window.onload = function() {
            displayExampleResults();
        };
    </script>
</head>
<body>
    <div class="container">
        <h1>Search Insert Position</h1>
        <p>Select method:</p>
        <label>
